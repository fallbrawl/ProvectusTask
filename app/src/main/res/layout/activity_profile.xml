<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/randomBackgroundUserPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/random_pic" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/avatar_placement"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Roger Waters"
            android:textAppearance="@style/ProfileName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/userBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="1983-07-14 07:29:45"
                android:textAppearance="@style/ProfileRegularData" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="@dimen/profile_pics_size"
                android:layout_height="@dimen/profile_pics_size"
                android:src="@drawable/email_profile_pic"
                android:layout_marginEnd="@dimen/profile_icon_margin"
                />
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="herdemisemyrise.bt@gmail.com"
                android:textAppearance="@style/ProfileRegularData" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/profile_pics_size"
                android:layout_height="@dimen/profile_pics_size"
                android:src="@drawable/phone_profile_pic"
                android:layout_marginEnd="@dimen/profile_icon_margin"/>
            <TextView
                android:id="@+id/userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Roger Waters"
                android:textAppearance="@style/ProfileRegularData" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/profile_pics_size"
                android:layout_height="@dimen/profile_pics_size"
                android:src="@drawable/cell_phone_profile_pic"
                android:layout_marginEnd="@dimen/profile_icon_margin"/>
            <TextView
                android:id="@+id/userCellPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Roger Waters"
                android:textAppearance="@style/ProfileRegularData" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/profile_pics_size"
                android:layout_height="@dimen/profile_pics_size"
                android:src="@drawable/address_profile_pic"
                android:layout_marginEnd="@dimen/profile_icon_margin"
               />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/userStreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1861 jan pieterszoon coenstraat"
                    android:textAppearance="@style/ProfileRegularData" />
                <TextView
                    android:id="@+id/userMisc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="maasdriel, zeeland, 69217"
                    android:textAppearance="@style/ProfileRegularData" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="ProfileName">
        <item name="android:textColor">@color/colorUserName</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/name_font_size</item>
    </style>

    <style name="ProfileRegularData">
        <item name="android:textColor">@color/colorRegularText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/profile_regular_card_font_size</item>
    </style>


</resources>
